<script type="text/javascript">
$(document).ready(function(){
	var siteMapIsOpen = false;
	var siteMapWasOpened = false;
	$("#topicNavSiteMapOpener").click(function(){
		if (!siteMapIsOpen) {			
			if (siteMapWasOpened) {
				$("#topicNavSitemapTarget").slideDown(400);
				siteMapIsOpen = true;
			} else {
				$.get("/nav/expand.html", function(data) {
					$("#topicNavSitemapTarget").html(data);
					$("#topicNavSitemapTarget").slideDown(400);					
					siteMapIsOpen = true;
					siteMapWasOpened = true;
				});
			}
			$("#topicNavSiteMapOpener").addClass("moreSelected");
		} else {
			$("#topicNavSitemapTarget").slideUp(300);
			$("#topicNavSiteMapOpener").removeClass("moreSelected");
			siteMapIsOpen = false;
		}
	});
});
</script>
