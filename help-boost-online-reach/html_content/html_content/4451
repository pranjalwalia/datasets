s .comment-form .policy:link:hover,.comments .comment-form .policy:visited:hover{color:#0099ff}.comments li p,.comments li textarea,.comments .comment-form p,.comments .comment-form textarea{clear:both;font-size:12px;line-height:18px;display:block;clear:both}.comments li textarea,.comments .comment-form textarea{padding:7px;border-width:1px;width:431px}.comments li .facebook-share,.comments .comment-form .facebook-share{margin:14px 0}.comments li .submit,.comments .comment-form .submit{margin-bottom:28px}.sidebar{display:inline;float:left;width:313px;position:relative;left:-1px;padding-left:1px;border-left:#cccccc 1px solid}.sidebar .module,.sidebar .ad{border-top:1px #999999 dotted;border-color:rgba(0, 0, 0, 0.5);padding:7px}.sidebar .module:first-child,.sidebar .ad:first-child{border:0}.sidebar .daily-good{margin:-3px}.gallery-list{display:inline;float:left;width:970px;margin:28px 0 14px}.gallery-list h2 .description{display:inline;float:right}#paginationHolder{font-size:14px;text-align:right;margin-top:0;padding:14px 0;border-top:1px #999999 dotted;border-bottom:1px #999999 dotted;border-color:rgba(0, 0, 0, 0.5)}ul.pagination{margin:0;padding:0}ul.pagination span{font-weight:bold}ul.pagination li{display:inline}ul.pagination li a{color:#999}
