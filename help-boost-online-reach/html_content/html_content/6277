$('#view_all_comments').click(function() {
	$('#ratings_entry_list').hide();
	$('#view_all_comments_div').remove();
	$('#ratings_box_hidden').load('http://www.pauladeen.com/forms/comments_list_all/617/');
	$(".comment_box:odd").addClass("bg");
  	$(".comment_box:even").addClass("null");
	return false;
});

$(document).ready(function()
{
  //for div
  $(".comment_box:odd").addClass("bg");
  $(".comment_box:even").addClass("null");
});
</script>
			
			
