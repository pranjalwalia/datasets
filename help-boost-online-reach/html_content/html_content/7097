        <h1 class="header fn">Semisweet Chocolate Layer Cake with Vanilla Cream Filling</h1>
    


                        
                    
                    
                    
                    
            </div>
        

       


       

       <div class="time-and-yield">
             
             <div class="yield"><span class="yield">
                     Makes 10 to 12 servings
             </span></div>
             
             
             
       </div>
       

       
            
                









    
    












    
    

    
    
    
    
    
    
    
    
    
    

    
        
          
          
              
            

        

        

        
                 
            
         

        
    
        
          
          
              
            

        

        

        
                 
            
         

        
    

    

    
      
      


      
        
            
          
      
      
    

    

    

    

    
      
      
      
        
            
          
      
      
    

    

    

    

    

    

    

    
