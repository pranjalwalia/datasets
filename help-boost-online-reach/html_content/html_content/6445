  var _gaq=[['_setAccount','UA-9081548-1'],['_trackPageview']];
  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>

<script>
function recordOutboundLink(link, category, action) {
	_gaq.push(['_trackEvent', category, action]);
	window.open (link.href,"x");
}

$(function() {
	$(".track-ga-click-event").on("click", function(event) {
		var category = ($(this).data('ga-category')) ? $(this).data('ga-category') : '';
		var action = ($(this).data('ga-action')) ? $(this).data('ga-action') : '';
		var label = ($(this).data('ga-label')) ? $(this).data('ga-label') : '';
		var value = ($(this).data('ga-value')) ? $(this).data('ga-value') : '';
		var noninteraction = ($(this).data('ga-noninteraction')) ? $(this).data('ga-noninteraction') : false;
		
		if (category && action) {
			_gaq.push(['_trackEvent', category, action, label, value]);
		}
	});
});
</script>



