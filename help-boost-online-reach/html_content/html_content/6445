<script type="text/javascript">
  function fbSaveRecipe()
  {
    // TODO: Revise this so it doesn't ask logged in users to login again via FB.getLoginStatus
    FB.login(function(response) {
      if (response.authResponse) {
        // User is authenticated, Publish Action
        publishSaveRecipe();
      } else {
        // User declined authentication
        console.log("User declined app: "+response);
       }
     },{scope: 'email,publish_actions'});
  }

  function publishSaveRecipe()
  {
    FB.api(
      "/me/food_prod:save?recipe=http://www.food52.com/recipes/13568_watermelon_chili_sliders",
      'post',
      function(response) {
        if (!response || response.error) {
          console.log(response);
        } else {
          alert('Your recipe was successfully saved!');
        }
      });
  }

  function trimTags() {
        var tagsString = document.getElementById('tags_name').value;
        if (tagsString != null) {
            document.getElementById('tags_name').value = tagsString.trim();
        }
    }

    function setupAjaxTags() {
        var tagsString = document.getElementById('tags_input').value;

        if (tagsString == null || tagsString.trim() == "" || tagsString.trim().indexOf("Enter") == 0) {
            document.getElementById('tag_canvas').innerHTML = '';
            return;
        }

        var lastChar = tagsString.substring(tagsString.length - 1);
        var pattern = /[\/\;\(\)\*\&\^\%\$\#\@\!\[\]\{\}\-\_\.\+\=]/;
        if (lastChar.match(pattern) != null) {
            tagsString = tagsString.substring(0,tagsString.length - 1);
            document.getElementById('tags_input').value = tagsString;
        }

        tagsArr = tagsString.split("|")
        tagsArr = tagsArr.toString().split(",");

        if (tagsArr == null || tagsArr.length < 1) {
            document.getElementById('tag_canvas').innerHTML = '';
            return;
        }

        //only allow 5 tags
        if (tagsArr.length > 5) {
            tagsString = tagsString.substring(0, tagsString.length - 1);
            document.getElementById('tags_input').value = tagsString;
            tagsArr = tagsString.split(",");
        }

        tagsHTML = "";
        for (i = 0; i < tagsArr.length; i++) {
            tagsHTML += "<a href='/hotline/questions/" + tagsArr[i].trim() + "' target='_blank'>" + tagsArr[i].trim() + "</a>";
            if (i < tagsArr.length - 1)
                tagsHTML = tagsHTML + " | ";
        }

        document.getElementById('tag_canvas').innerHTML = tagsHTML;
    }

    //after selection of autocomplete choice, add a comma to the tags string
    function afterUpdate() {
        var tagsString = document.getElementById('tags_input').value;
        tagsArr = tagsString.split("|")
        tagsArr = tagsArr.toString().split(",");
        if (tagsArr.length >= 5)
            return;
        document.getElementById('tags_input').value = tagsString + ", ";
    }





</script>


