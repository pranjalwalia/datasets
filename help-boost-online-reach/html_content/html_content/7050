	<div id="adHeaderCirc" class="ad"></div>

	<script type="text/javascript">

	var topAdAttempts = 0;

	function topAds() {

		// Has DoubleClick sent a blank ad (as signified by a grey.gif tracking pixel)
		var blankAdLoaded = false;
		if ($("#topAds .adTopleader").html().search("grey.gif") != -1) {
			blankAdLoaded = true;
		} 
		var adWidth = maxAdWidth = Math.max(
			$("#topAds .adTopleader").find(">img").width(),
			$("#topAds .adTopleader").find(">embed").width(),
			$("#topAds .adTopleader").find(">div").width(),
			$("#topAds .adTopleader").find(">a").width(),
			$("#topAds .adTopleader").find(">object").width(),
			$("#topAds .adTopleader").find(">table").width(),
			$("#topAds .adTopleader").find(">iframe").width()
		);
				
		// If we don't have a blank ad from DoubleClick, and the ad doesn't have
		// a width, we must still be waiting for the ad.  Try again in a bit...
		if (blankAdLoaded == false && adWidth <= 1) {
			if (topAdAttempts < 4) { // Try up to 10 times
				topAdAttempts++;
				setTimeout('topAds()', 250);
				return false;
			} else {
				// We've waited a while, doesn't look like an ad is coming
				blankAdLoaded = true;
			}
		}
				
		// If we have a blank ad or a wide push down ad, then show the wide circ
		if ( blankAdLoaded == true || adWidth > 732 )
		{			
							$("#adHeaderCirc").html('<a href="https://secure.palmcoastd.com/pcd/eSv?iMagId=23301&i4Ky=IA1S" title="Subscribe to The Atlantic" onclick="s.tl(this,\'o\',\'EasyAd: 980x35_Mar_11.jpg\');"><img src="http://assets.theatlantic.com/static/easel/images/ads/120326_980x35_Mar_11.jpg" alt="" /></a>');
				s.prop22 = '980x35_Mar_11.jpg';
			
			if (blankAdLoaded == false) {
				$("#topAds .adTopleader").addClass('adPush');
			} else {
				$("#topAds .adTopleader").hide();
			}

		// ELSE the topleader has an ad in it, but it is less than 730px
		// So show the small circ ad that goes with it
		} else {
			$("#topAds .adTopleader").attr('style', 'width:730px');
			
							$("#adHeaderCirc").html('<a href="https://secure.palmcoastd.com/pcd/eSv?iMagId=23301&i4Ky=IA2S" title="Subscribe to The Atlantic" onclick="s.tl(this,\'o\',\'EasyAd: 246x90_Mar11.jpg\');"><img src="http://assets.theatlantic.com/static/easel/images/ads/120223_246x90_Mar11.jpg" alt="" /></a>');
				$("#adHeaderCirc").attr('style', 'float:right');
				s.prop22 = '246x90_Mar11.jpg';
					}

		this.hideTracking = function () {
			// Hide any tracking pixels we find to keep the layout form breaking
			$('#topAds').find("img").each(function(){
				if ($(this).width() == 1) {
					$(this).addClass('trackingPixel');
				}
			});
		}
		setTimeout('this.hideTracking()', 250); // give tracking pixels a chance to load

		return true;
	}
	topAds();
	
	</script>
</div>
