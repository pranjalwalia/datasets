<script type="text/javascript">
	var priviledge = 0;
	jQuery.ajax({
		type: 'POST',
		url: '/users/conversations/check_opt.php',
		dataType:'json',
		success: function(data){
			loadConversations(data);
		}
	});

	jQuery('.invitation_box_note .btn').live('click',
		function(e){
			jQuery('.invitation_box_note').css('opacity', 0.5); 
			jQuery.ajax({
			type: 'POST',
			data: {'action':jQuery(this).attr('rel')},
			url: '/users/conversations/invite.php',
			dataType:'json',
			success: function(data){
				HPTrack.trackEvent("Conversations", data == 6 ? "Opt In" : "Opt out", "EntryId", parseInt(HuffPoUtil.GetEntryID()));
				_gaq.push(function(){
					window.location.hash = '#hp_comments';
					window.location.reload()
				});
			}
		});
		e.preventDefault();
		return false;
	})
	
	function loadConversations(priv){
		priviledge = priv;
		switch (priv){
			case 6:
				if (jQuery('#wrapper_inner #blog_content').length) {
					jQuery('body').addClass('conversation-blog');
				}
				huff.use("conversations/conversations");
			break;
			case 5:
				huff.use("conversations/conversations");
				break;
			case 0:
			break;
		}
	}
</script>
