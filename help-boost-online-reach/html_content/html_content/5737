<script>

var runCount = 0;    
function reintegrate() {
    runCount++;
    if(runCount > 60) clearInterval(timerId);
    $('#reintegrate').load("http://www.inc.com/index.php?op=userreintegration&incid=43896&tooid=&epgid=");
}
if(getCookie('incun')) {
    $('#reintegrate').load("http://www.inc.com/index.php?op=userintegration&incid=43896&tooid=&epgid=");
	var timerId = setInterval(reintegrate, 60000);
}

</script>








