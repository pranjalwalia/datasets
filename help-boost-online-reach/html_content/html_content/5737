<style>
	#subscribepopup {
    bottom:0;
    position:fixed;
    z-index:150;
    _position:absolute;
    _top:expression(eval(document.documentElement.scrollTop+
        (document.documentElement.clientHeight-this.offsetHeight)));
    height:0px;
    margin-left: 20px;
}
</style>
<script language="Javascript">

	$.easing.easeInBounce = function (x, t, b, c, d) {
		return c - jQuery.easing.easeOutBounce (x, d-t, 0, c, d) + b;
	}
	
	$.easing.easeOutBounce = function (x, t, b, c, d) {
		if ((t/=d) < (1/2.75)) {
			return c*(7.5625*t*t) + b;
		} else if (t < (2/2.75)) {
			return c*(7.5625*(t-=(1.5/2.75))*t + .75) + b;
		} else if (t < (2.5/2.75)) {
			return c*(7.5625*(t-=(2.25/2.75))*t + .9375) + b;
		} else {
			return c*(7.5625*(t-=(2.625/2.75))*t + .984375) + b;
		}
	}

	if(getCookie('popsub')) {
		var nopop = true;
	} else {
		var nopop = false;
	}
	var showsubpop=false;
	$(window).scroll(function() { 
		if(!nopop) {
		if($(window).scrollTop()>400 && ($(window).scrollTop() + $(window).height() < $(document).height() -300)) { 
			if(!showsubpop) { 
				showsubpop=true;
				subpopopen();
			} else { 
				return; 
			} 
		} else if(showsubpop) { 
			showsubpop=false;
			subpopclose();
		} else { 
			return; 
		}
		}
	});
	
	function subpopopen() {
		setCookie('popsub','true',1, { "path" : "/", "domain" : ".inc.com" });
		$('#subscribepopup').animate({height:'185px'}, 500);
	}	
	
	function subpopclose() {
		$('#subscribepopup').animate({height:'0px'}, 500);
	}
</script>

