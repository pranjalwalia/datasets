});
</script>


<script>
	
    /* BEGIN - Login Cookie Counter */
        
        // Number of articles views allowed before popping the login overlay (Unregisterd users)
        var force_limit = 10;
        var article_limit = 5;
        var foreign_imit = 2;        
        
        // DETERMINE LOCATION PART 1 - Get browser language settings
        var browser_language = "";
        
        if(navigator.browserLanguage != undefined){
            browser_language = navigator.browserLanguage;       // For IE users
        }else if(window.navigator.language != '' && window.navigator.language != undefined){
            browser_language = window.navigator.language;       // For everyone else
        }
        
        var lang_is_english = false;
        var accepted_languages = ["en-US","en"];
        
        if(accepted_languages.indexOf(browser_language) != -1){
            lang_is_english = true;
        }else{
            lang_is_english = false;
        }
        
        // DETERMINE LOCATION PART 2 - Get timezone setings of user
        var d = new Date();
        var timezone_offset = d.getTimezoneOffset()/60;
        
        cnt = getCookie('cnt');
	
        if(cnt){
            cnt++;
        }else{
            cnt=0;
        }
        
        // IF user is not logged in
	if(!getCookie('incun')){
            
            if( (timezone_offset > 10 || timezone_offset < 4) && (cnt >= foreign_imit) ){
                //$('a.login').click();
                window.location = "http://www.inc.com/login?returnurl="+document.URL;
                //cnt=0;
            }else if(!lang_is_english && (cnt >= foreign_imit)){
                window.location = "http://www.inc.com/login?returnurl="+document.URL;
                //cnt=0;
            }else if(cnt >= force_limit){
                window.location = "http://www.inc.com/login?returnurl="+document.URL;
                //cnt=0;
            }else if(cnt >= article_limit){
                $('a.login').click();
                //cnt=0;
            }
	}else{
            cnt=0;
        }
        
	setCookie('cnt',cnt,3600, { "path" : "/", "domain" : ".inc.com" });
	setCookie('currenturl','http://www.inc.com/minda-zetlin/listening-to-complainers-is-bad-for-your-brain.html',3600, { "path" : "/", "domain" : ".inc.com" });
    
    /* END - Login Cookie Counter */
        
	// THE BEGINNING ------
	
	var regpos = getCookie('regpos');
	var nus = getCookie('nus');
	
	// If the user is logged in and 'regpos' exists - they have NOT completely filled out their info
	if(regpos){
	    regpos++;
	    
	    //Add to the cookie for conditional use later
	    setCookie('regpos',regpos,3600, { "path" : "/", "domain" : ".inc.com" });
	    
	    
	    	    
	    
	}else{
	    deleteCookie('regpos','/','.inc.com');
	}
	
	
		
	
	var regposn = getCookie('regposn');
	if(regposn){
	    regposn++;
	    setCookie('regposn',regposn,3600, { "path" : "/", "domain" : ".inc.com" });
	}else{
	    deleteCookie('regposn','/','.inc.com');
	}
	if(getCookie('incun') && regposn>=4) {
		//pop_overlay(1);
		//$('#user_alert_box').show();
		console.log("SHOW THE NEWS OVERLAY");
	}
	
	// THE END ------
	
</script>



