      $$('.small-tabs a').each(function (el) {
          el.observe('click', function (evt) {
              evt.preventDefault();
              var tab = $(this.readAttribute("href"));
              this.up("li").adjacent(".active").each(function (elm) {
                  elm.removeClassName("active");
              });
              this.up("li").addClassName("active");
              $$(".meta-tab").each(function (elm) {
                  elm.hide();
              });
              tab.setStyle({display: "block"});
          });
