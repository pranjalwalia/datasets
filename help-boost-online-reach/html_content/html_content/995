						<section id="PrimaryContent">

								<article class="Article Module" role="main">
					<section class="body">
												<header>
							<h1 id="articleTitle" class="Heading1">A Gamer's Manifesto</h1>
						</header>
						
												<footer id="metadata" class="ArticlePreview">
							<div class="meta">
								<address class="byline">By:
																	<a data-url="/members/David Wong" rel="author" class="Heading5">David Wong</a>																</address>
								<time datetime="2007-12-10T18:05:00-08:00" class="date">December 10, 2007</time>
								<span class="views" id="viewCounts"></span>
								<div class="fbSendWrapper"><div class="FacebookSend">
