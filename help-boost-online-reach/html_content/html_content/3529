<script type="text/javascript"> 
function microsoft_adunit_render(adArray) {
   if (adArray.length > 0) {
       var adsBody = "<h2>Sponsored Links</h2>";
       for (var i in adArray) {
    	   if(adArray[i]){
	           var ad = "<div class='ad'>";
	           ad += "<a href='" + adArray[i].url + "' target='_blank' rel='nofollow' class='ad-title'>" + adArray[i].title + "</a><br/>";
	           if (null != adArray[i].line1 && adArray[i].line1.length>0) {
	            ad += adArray[i].line1 + "<br/>";
	           }
	           ad += "<a href='" + adArray[i].url + "' class='ad-site' rel='nofollow' target='_blank'>" + adArray[i].display_url + "</a>";
	           ad += "</div>";
	           adsBody += ad;
    	   }
       }
       document.getElementById("textAds").innerHTML = adsBody;
   }
};
microsoft_adunitid = "12359";
microsoft_adunitformat = "js"; 
</script>
