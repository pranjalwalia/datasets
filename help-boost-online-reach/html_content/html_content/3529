		//Panel Nav Buttons
				$('#panel-nav a').click(function(){
                var whichPanel = $(this).attr('href');
                var wideTab = $('#wide-panel-nav a[href="' + whichPanel + '"]');
                if($('#int-features').hasClass('open')){
                        $('#int-features').animate({height:'0px'}).removeClass('open');
                }
                if($(whichPanel).css('display') == 'block'){
                        if($('body').hasClass('home')){
                                $(whichPanel).hide();
                                if($('body').width() < '601'){
                                    $('#int-panels').css('height','0px');
                                }
                        } else {
                                $('#int-panels').animate({height:'0px'});
                                $(whichPanel).animate({height:'0px'},function(){
                                        $(whichPanel).hide();
                                });
                        }
                        $(this).removeClass('open');
                        $('#wide-panel-nav a').removeClass('open');
                        $('.new-buzz').show();
                		} else {
                        if($('body').hasClass('home')){
                                $('.panel').hide();
                                $('#panel-nav a').removeClass('open');
                                $('#wide-panel-nav a').removeClass('open');
                                if($('body').width() < '601'){
                                     $(whichPanel).show().animate({height:'430px'});
                                     $('#int-panels').animate({height:'430px'});
                                     $('#main-nav').css('margin-top','1px');
                                     $('.new-buzz').css('display','none');
                                } else {
                                    $(whichPanel).show();
                                }
                                $('.new-buzz').hide();
                        } else {
                                $('.panel').hide().css('height','0px');
                                $('#panel-nav a').removeClass('open');
                                $('#wide-panel-nav a').removeClass('open');
                                if($('body').width() < '601'){
                                     $(whichPanel).show().animate({height:'430px'});
                                     $('#int-panels').animate({height:'430px'});
                                } else {
                                     $(whichPanel).show().animate({height:'415px'});
                                     $('#int-panels').animate({height:'415px'});
                                }
                        }
                        $(this).addClass('open');
                        $(wideTab).addClass('open');
                }
                return false;
        });

