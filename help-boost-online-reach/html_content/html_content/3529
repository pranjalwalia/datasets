		function loadComments(order) {
			var params = {
				threadId:		ArticleComments.threadId,
				style:			ArticleComments.style,
				sort:			order,
				pagination:		ArticleComments.pagination
			};
	
			if (null != ArticleComments.uname && '' != ArticleComments.uname) {
				params.username = ArticleComments.uname;
			}
	
			$.get("/articleComment/get.do", params,
			ArticleComments.fireCallBacks);
		}
	
		function sortComments(buttonId, order) {
			$('.btn-link').attr('class', 'btn-link');
			$('#'+buttonId).attr('class', 'selected btn-link');
			loadComments(order);
		}
	
		loadComments("default");
	
